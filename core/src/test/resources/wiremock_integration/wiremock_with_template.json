{
    "scenarioName": "templated wiremock",
    "steps": [
        {
            "name": "templated_response",
            "url": "/$MOCK",
            "operation": "$USE.WIREMOCK",
            "request": {
                "mocks": [
                    {
                        "name": "Template 001",
                        "operation": "GET",
                        "request": {
                            "urlPath": "/template/001"
                        },
                        "response": {
                            "status": 200,
                            "headers" : {
                                "Content-Type" : "application/json"
                            },
                            "body": {
                                "created_date_time": "${LOCAL.DATETIME.NOW:uuuu-MM-dd'T'HH:mm:ss.SSS}",
                                "oneMinuteAgo": "{{now offset='-1 minutes' format='epoch'}}",
                                "oneMinuteAhead": "{{now offset='+1 minutes' format='epoch'}}",
                                "ucparam": "{{upper request.query.param[0]}}"
                            }
                        }
                    }
                ]
            },
            "assertions": {
                "status": 200
            }
        },
        {
            "name": "GetTemplate",
            //<-- with comments
            "url": "/template/001",
            "operation": "GET",
            "request": {
                "headers": {
                    "Content-Type": "application/json;charset=UTF-8"
                },
                "queryParams": {
                    "param": "lowerToUpper"
                },
                "body": {
                }
            },
            "assertions": {
                "status": 200,
                "body": {
                    "ucparam": "LOWERTOUPPER"
                }
            }
        }
    ]
}
